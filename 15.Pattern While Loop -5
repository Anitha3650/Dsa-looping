Print the following pattern using while loop

*****
****
***
**
*
*
**
***
****
*****
----------------------------------------------
import java.util.*;
public class Main
{
   
    public static void print_pattern()
    {
         
        int i=1;
         while(i<=5){
             int j=i;
             while(j<=5){
                System.out.print("*"); 
                j++;
             }
            
             System.out.println();
             i++;
         }
         int k=1;
         while(k<=5){
             int j=1;
             while(j<=k){
                System.out.print("*"); 
                j++;
             }
            
             System.out.println();
             k++;
         }
    }
     public static void main(String[]args)
    {
        Scanner sc=new Scanner(System.in);
        int n = sc.nextInt();
        print_pattern();
    }
}
